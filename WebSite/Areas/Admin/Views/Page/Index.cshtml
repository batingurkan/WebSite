@model IEnumerable<Sayfa>
@{
    ViewData["Title"] = "Sayfalar";
}

<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Sayfa Adı</th>
        <th scope="col">Açıklama</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><a href="#" class="btn btn-primary">Detay</a></td>
        </tr>
    }
    </tbody>
</table>