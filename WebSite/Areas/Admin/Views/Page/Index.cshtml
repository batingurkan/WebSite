@model IEnumerable<Page>
@{
    ViewData["Title"] = "Sayfalar";
}

<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Sayfa Adı</th>
        @* <th scope="col">Açıklama </th> *@
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            @* <td>@item.Description</td> *@
            <td><a href="../../Admin/Page/Edit?Id=@item.Id" class="btn btn-primary">Detay</a></td>
             <td><a href="../../Admin/Page/Delete?Id=@item.Id" class="btn btn-danger">Kaldır</a></td>
        </tr>
        
    }
    <td><a href="../../Admin/Page/Add" class="btn btn-success">Sayfa Ekle</a></td>
    </tbody>
</table>